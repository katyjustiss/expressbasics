<!doctype html>
<html>
    <%- include('head', {page: 'Chicken Orders'}) %>
    <body>
      <%- include('header') %>
      <h1>Orders</h1>
      <a href ="/chickennuggets/order"> New Order </a>
      <table>
        <h3> Waiting orders </h3>
        <thead>
          <tr>
            <th>Name</th>
            <th>Flavor</th>
            <th>Quantity</th>
            <th>Time</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% orders.forEach(function(order) { %>
              <% if (!order.complete) { %>
              <tr>
                <td><%= order.name %></td>
                <td><%= order.flavor %></td>
                <td><%= order.qty %></td>
                <td><%= order.createdAt %></td>
                <td>
                  <form action="/chickennuggets/order/<%= order._id %>/complete" method="POST">
                    <input type="submit" value="Complete">
                  </form>
                </td>
              </tr>
              <% } %>
            <% }); %>
        </tbody>
      </table>

      <table>
        <h3> Completed Orders </h3>
        <thead>
          <tr>
            <th>Name</th>
            <th>Flavor</th>
            <th>Quantity</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
              <% orders.forEach(function(order) { %>
              <% if (order.complete) { %>
              <tr>
                <td><%= order.name %></td>
                <td><%= order.flavor %></td>
                <td><%= order.qty %></td>
                <td><%= order.createdAt %></td>
              </tr>
            <% } %>
            <% }); %>
        </tbody>
      </table>
      <%- include('javascripts') %>
    </body>
</html>
