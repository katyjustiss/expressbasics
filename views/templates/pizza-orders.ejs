<!doctype html>
<html>
    <head>
        <title><%= title %> | Pizza Orders</title>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
      <h1>Orders</h1>
      <a href ="/pizza/order"> New Order </a>
      <table>
        <h3> Waiting orders </h3>
        <thead>
          <tr>
            <th>Name</th>
            <th>Topping</th>
            <th>Quantity</th>
            <th>Time</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% orders.forEach(function(order) { %>
              <% if (!order.complete) { %>
              <tr>
                <td><%= order.name %></td>
                <td><%= order.topping %></td>
                <td><%= order.qty %></td>
                <td><%= order.createdAt %></td>
                <td>
                  <form action="/pizza/order/<%= order._id %>/complete" method="POST">
                    <input type="submit" value="Complete">
                  </form>
                </td>
              </tr>
              <% } %>
            <% }); %>
        </tbody>
      </table>

      <table>
        <h3> Completed Orders </h3>
        <thead>
          <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Topping</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
              <% orders.forEach(function(order) { %>
              <% if (order.complete) { %>
              <tr>
                <td><%= order.name %></td>
                <td><%= order.qty %></td>
                <td><%= order.topping %></td>
                <td><%= order.createdAt %></td>
              </tr>
            <% } %>
            <% }); %>
        </tbody>
      </table>
    </body>
</html>
