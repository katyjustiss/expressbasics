<!doctype html>
<html>
  <%- include('head', {page: 'Chicken'}) %>
    <body>
      <h1>All the Chicken Nuggets</h1>
      <a href="/chickennuggets"> Cancel </a>
      <form action="/chickennuggets/order" method="POST">
        Name: <input name="name" type="text" placeholder="Name">
        Sauce:
        <select name="sauce">
          <option value="mild">Mild</option>
          <option value="medium">Medium</option>
          <option value="hot">Hot</option>
          <option value="native thai">Native Thai</option>
          <option value="barbecue">Barbecue</option>
          <option value="honey mustard">Honey Mustard</option>
        </select>
        Quantity: <input name="qty" type="number" min="1" value='6'>
        <input type="submit" value="Give me nuggets!">
      </form>
      <%- include('javascripts') %>
    </body>
</html>
